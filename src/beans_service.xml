		<property name="maxPoolSize" value="30"/>
	</bean>
	
    <bean id="sendMailService" class="com.kuaiyidian.service.SendMailService">
		<property name="taskExecutor" ref="taskExecutor" />
	</bean>
	
	<bean id="sendPhoneService" class="com.kuaiyidian.service.SendPhoneService">
		<property name="taskExecutor" ref="taskExecutor" />
	</bean>
   
